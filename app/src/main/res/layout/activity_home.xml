<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_tool"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#D8699E">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="@color/white"
                android:textSize="20dp"></TextView>

            <Spinner
                android:id="@+id/select_location"
                android:layout_width="120dp"
                android:layout_height="20dp"
                style="@style/spinner_style"
                android:layout_below="@+id/location"
                android:scrollbarStyle="outsideOverlay"></Spinner>

            <TextView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_toRightOf="@+id/location"
                android:fontFamily="@font/ceviche_one"
                android:text="Foodie "
                android:textColor="@android:color/white"
                android:textSize="25dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_marginTop="0dp"
                android:layout_below="@id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@+id/select_location"
                android:fontFamily="@font/ceviche_one"
                android:text="Land"
                android:textColor="@android:color/white"
                android:textSize="25dp"
                android:textStyle="bold"></TextView>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <com.example.cityparcel.custom.NonSwipeableViewPager
        android:id="@+id/vp_slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tab"
        android:layout_below="@+id/tb_tool">

    </com.example.cityparcel.custom.NonSwipeableViewPager>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal"
        app:tabBackground="@android:color/white">

    </com.google.android.material.tabs.TabLayout>

</RelativeLayout>